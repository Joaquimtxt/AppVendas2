@model AppVendas.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Editar Produto</span>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProdutoId" />
    <div class="row">
        <div class=" form-group col-md-12 mt-2">
            <label asp-for="ProdutoNome" class="control-label"></label>
            <input asp-for="ProdutoNome" class="form-control" />
            <span asp-validation-for="ProdutoNome" class="text-danger"></span>
        </div>


    </div>
    <div class="row">
        <div class="col-md mt-2">
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mt-2">
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 mt-2">
            <div class="form-group">
                <label asp-for="QtadeEstoque" class="control-label"></label>
                <input asp-for="QtadeEstoque" class="form-control" />
                <span asp-validation-for="QtadeEstoque" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md mt-2">

            <label asp-for="CadastroAtivo" class="control-label">Cadastro Ativo</label>
            <select class="control" name="CadastroAtivo">
                @if (Model.CadastroAtivo == true)
                {
                    <option value="true" selected>Sim</option>
                    <option value="false">Não</option>
                }
                else
                {
                    <option value="true">Sim</option>
                    <option value="false" selected>Não</option>
                }
            </select>

        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary d-flex align-items-center px-5 mt-3 w-100 justify-content-center py-3">
                    <ion-icon name="save" class="me-2"></ion-icon> Salvar
                </button>
            </div>
        </div>
        <div class="col-4"></div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-outline-info d-flex align-items-center px-5 mt-3 w-100 justify-content-center py-3">
                <ion-icon name="arrow-back" class="me-2"></ion-icon>Voltar
            </a>
        </div>
    </div>

</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
